{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=OrganizationAppDb;Integrated Security=True;Encrypt=False; MultipleActiveResultSets=True;", // connection String  
          "tableName": "logs", // table name
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "removeStandardColumns": [ "Properties", "MessageTemplate" ],
            "customColumns": [
              {
                "ColumnName": "ControllerName",
                "DataType": "varchar",
                "AllowNulls": true,
                "DataLength": 150
              },
              {
                "ColumnName": "MethodName",
                "DataType": "varchar",
                "AllowNulls": true,
                "DataLength": 150
              },
              {
                "ColumnName": "CorrelationID",
                "DataType": "varchar",
                "AllowNulls": true,
                "DataLength": 50
              }
            ]
          }
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // "sqlConnection": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=OrganizationAppDb;Integrated Security=True;Encrypt=False; MultipleActiveResultSets=True",
    "sqlConnection": "Data Source=SYSLP1131;Initial Catalog=OrganizationAppDb;Integrated Security=True;Encrypt=False"
  },
  "DisableAPIs": ""
}